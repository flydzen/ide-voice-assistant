<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.flydzen.idevoiceassistant</id>
    <name>ide-voice-assistant</name>
    <vendor>flydzen</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>IdeaVIM</depends>
    <depends>com.intellij.ml.llm</depends>

    <resource-bundle>messages.VoiceAssistantBundle</resource-bundle>

    <actions>
        <action id="ExecuteVimScriptAction" class="com.github.flydzen.idevoiceassistant.actions.ExecuteVimScriptAction"/>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.flydzen.idevoiceassistant.toolWindow.VoiceAssistantToolWindowFactory" id="Voice Assistant" anchor="right" icon="AllIcons.General.User"/>
        <postStartupActivity implementation="com.github.flydzen.idevoiceassistant.startup.MyProjectActivity" />
        <notificationGroup id="Voice Assistant" displayType="BALLOON" isLogByDefault="true"/>
    </extensions>

    <actions>
        <action id="RecordAudio"
                class="com.github.flydzen.idevoiceassistant.actions.RecordAudioAction">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="OpenAIRunAction"
                class="com.github.flydzen.idevoiceassistant.actions.OpenAIRunAction">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action
                id="com.github.flydzen.idevoiceassistant.ExecuteCommands"
                class="com.github.flydzen.idevoiceassistant.ExecuteCommandsAction"
                text="Execute Voice Commands"
                description="Execute commands through the voice assistant">

            <!-- Add to Tools menu -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <!-- Optional: Add keyboard shortcut -->
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt V"/>
        </action>
    </actions>

</idea-plugin>
